---
import BaseLayout from '@layouts/BaseLayout.astro';

const calculators = [
  {
    name: 'Freelancer Hourly Rate Calculator',
    description: 'Calculate your ideal hourly rate based on income goals, taxes, and expenses',
    href: '/freelance/hourly-rate-calculator',
  },
  {
    name: 'Quarterly Tax Estimator',
    description: 'Estimate your quarterly estimated tax payments including self-employment tax',
    href: '/freelance/quarterly-tax-calculator',
  },
  {
    name: 'W2 vs 1099 Comparison',
    description: 'Compare take-home pay between W2 employment and 1099 contractor work',
    href: '/freelance/w2-vs-1099-calculator',
  },
  {
    name: 'Project Rate Calculator',
    description: 'Convert your hourly rate to project-based pricing with buffers and tiers',
    href: '/freelance/project-rate-calculator',
  },
];

const upcomingCalculators = [
  'Freelance Retirement Planner',
  'Invoice Generator',
];
---

<BaseLayout
  title="Freelance Calculators - Rates, Taxes & More | Calcverse"
  description="Free calculators for freelancers. Calculate your hourly rate, estimate quarterly taxes, and compare W2 vs 1099 options."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-freelance-500 to-freelance-600 text-white py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <div class="w-16 h-16 rounded-2xl bg-white/20 backdrop-blur flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <h1 class="heading-lg mb-4">Freelance Calculators</h1>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        Tools to help freelancers and consultants make smarter financial decisions
      </p>
    </div>
  </section>

  <!-- Calculators List -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="grid gap-6">
        {calculators.map((calc) => (
          <a
            href={calc.href}
            class="group block p-6 bg-white rounded-2xl border border-neutral-100 hover:border-freelance-200 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <h2 class="font-bold text-xl text-neutral-900 group-hover:text-freelance-600 transition-colors">
              {calc.name}
            </h2>
            <p class="text-neutral-600 mt-2 leading-relaxed">{calc.description}</p>
            <span class="inline-flex items-center text-freelance-600 font-semibold mt-4 group-hover:gap-2 transition-all">
              Use Calculator
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>

      <!-- Coming Soon -->
      <div class="mt-12 card-elevated p-6">
        <h3 class="font-bold text-neutral-900 mb-4 flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-freelance-500 animate-pulse"></span>
          More Freelance Calculators Coming Soon
        </h3>
        <ul class="text-neutral-600 space-y-2">
          {upcomingCalculators.map((calc) => (
            <li class="flex items-center gap-3">
              <svg class="w-4 h-4 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              {calc}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>

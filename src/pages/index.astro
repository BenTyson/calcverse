import BaseLayout from '@layouts/BaseLayout.astro';

const categories = [
  {
    name: 'Freelance',
    description: 'Calculate rates, taxes, and compare employment options',
    href: '/freelance',
    icon: 'ðŸ’¼',
    color: 'bg-blue-50 border-blue-200 hover:border-blue-400',
  },
  {
    name: 'Creator',
    description: 'Estimate revenue from YouTube, Twitch, and more',
    href: '/creator',
    icon: 'ðŸŽ¬',
    color: 'bg-red-50 border-red-200 hover:border-red-400',
  },
  {
    name: 'Side Hustle',
    description: 'Plan your path to financial goals',
    href: '/side-hustle',
    icon: 'ðŸš€',
    color: 'bg-green-50 border-green-200 hover:border-green-400',
  },
  {
    name: 'Personal Finance',
    description: 'FIRE planning, emergency funds, and budgeting',
    href: '/personal-finance',
    icon: 'ðŸ’°',
    color: 'bg-yellow-50 border-yellow-200 hover:border-yellow-400',
    comingSoon: true,
  },
];

const featuredCalculators = [
  {
    name: 'Freelancer Hourly Rate',
    description: 'Calculate your ideal rate based on income goals, taxes, and expenses',
    href: '/freelance/hourly-rate-calculator',
    category: 'Freelance',
  },
  {
    name: 'YouTube AdSense Revenue',
    description: 'Estimate earnings based on views, niche, and audience location',
    href: '/creator/youtube-adsense-calculator',
    category: 'Creator',
  },
  {
    name: 'Side Hustle Time to Goal',
    description: 'Plan how long to reach your financial target',
    href: '/side-hustle/time-to-goal-calculator',
    category: 'Side Hustle',
  },
];
---

<BaseLayout
  title="Calcverse - Free Calculators for Freelancers, Creators & Side Hustlers"
  description="Free financial calculators for freelancers, content creators, and side hustlers. Calculate rates, estimate revenue, and plan your path to financial goals."
>
  <section class="bg-gradient-to-b from-brand-600 to-brand-700 text-white py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        Smart Calculators for
        <span class="text-brand-200">Smart Earners</span>
      </h1>
      <p class="text-xl md:text-2xl text-brand-100 max-w-3xl mx-auto mb-8">
        Free tools to help freelancers, creators, and side hustlers make better financial decisions.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="#calculators"
          class="px-6 py-3 bg-white text-brand-600 font-semibold rounded-lg hover:bg-brand-50 transition-colors"
        >
          Explore Calculators
        </a>
        <a
          href="/freelance/hourly-rate-calculator"
          class="px-6 py-3 bg-brand-500 text-white font-semibold rounded-lg border border-brand-400 hover:bg-brand-400 transition-colors"
        >
          Try Hourly Rate Calculator
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50" id="categories">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-4">
        Browse by Category
      </h2>
      <p class="text-gray-600 text-center mb-10 max-w-2xl mx-auto">
        Find the right calculator for your situation
      </p>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {categories.map((cat) => (
          <a
            href={cat.comingSoon ? '#' : cat.href}
            class={`block p-6 rounded-xl border-2 transition-all ${cat.color} ${
              cat.comingSoon ? 'opacity-60 cursor-not-allowed' : 'hover:shadow-lg'
            }`}
          >
            <span class="text-3xl">{cat.icon}</span>
            <h3 class="font-semibold text-gray-900 mt-3 flex items-center gap-2">
              {cat.name}
              {cat.comingSoon && (
                <span class="text-xs bg-gray-200 text-gray-600 px-2 py-0.5 rounded-full">
                  Soon
                </span>
              )}
            </h3>
            <p class="text-sm text-gray-600 mt-1">{cat.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-white" id="calculators">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-4">
        Featured Calculators
      </h2>
      <p class="text-gray-600 text-center mb-10 max-w-2xl mx-auto">
        Our most popular tools to help you make smarter decisions
      </p>

      <div class="grid md:grid-cols-3 gap-6">
        {featuredCalculators.map((calc) => (
          <a
            href={calc.href}
            class="group block p-6 bg-white rounded-xl border border-gray-200 hover:border-brand-300 hover:shadow-lg transition-all"
          >
            <span class="text-xs font-medium text-brand-600 uppercase tracking-wide">
              {calc.category}
            </span>
            <h3 class="font-semibold text-gray-900 text-lg mt-2 group-hover:text-brand-600 transition-colors">
              {calc.name}
            </h3>
            <p class="text-gray-600 mt-2">{calc.description}</p>
            <span class="inline-flex items-center text-brand-600 font-medium mt-4 group-hover:gap-2 transition-all">
              Try it free
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-900 text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Why Calcverse?
      </h2>
      <div class="grid md:grid-cols-3 gap-8 mt-10">
        <div>
          <div class="w-12 h-12 bg-brand-600 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-semibold text-lg">Fast & Free</h3>
          <p class="text-gray-400 mt-2">No sign-up required. Get instant results without any cost.</p>
        </div>
        <div>
          <div class="w-12 h-12 bg-brand-600 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
          </div>
          <h3 class="font-semibold text-lg">Shareable Results</h3>
          <p class="text-gray-400 mt-2">Share your calculations with a simple link. Embed on your site.</p>
        </div>
        <div>
          <div class="w-12 h-12 bg-brand-600 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-semibold text-lg">Privacy First</h3>
          <p class="text-gray-400 mt-2">Your data stays in your browser. We don't store anything.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

---
const categories = [
  { name: 'Freelance', href: '/freelance' },
  { name: 'Creator', href: '/creator' },
  { name: 'Side Hustle', href: '/side-hustle' },
];
---

<header class="bg-white border-b border-gray-200">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center gap-2">
        <span class="text-2xl font-bold text-brand-600">Calcverse</span>
      </a>

      <div class="hidden md:flex items-center gap-6">
        {categories.map((cat) => (
          <a
            href={cat.href}
            class="text-gray-600 hover:text-brand-600 font-medium transition-colors"
          >
            {cat.name}
          </a>
        ))}
      </div>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-brand-600"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {categories.map((cat) => (
        <a
          href={cat.href}
          class="block py-2 text-gray-600 hover:text-brand-600 font-medium"
        >
          {cat.name}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
